#!/bin/bash
URL="https://pokeapi.co/api/v2/pokemon/pikachu"

# Output files
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request
curl -s -o "$OUTPUT_FILE" -w "%{http_code}" "$URL" > tmp_status.txt

# Read the HTTP status code
STATUS=$(cat tmp_status.txt)
rm tmp_status.txt

# Check if the request was successful
if [ "$STATUS" -eq 200 ]; then
    echo "API request successful. Data saved to $OUTPUT_FILE."
else
    echo "API request failed with status code $STATUS" >> "$ERROR_FILE"
    echo "Check $ERROR_FILE for details."
fi
